# TCRN TMS Local Development Environment Variables
# Quick start configuration for local development
# Copy this file to .env.local

# =============================================================================
# Node Environment
# =============================================================================
NODE_ENV=development

# =============================================================================
# Application
# =============================================================================
APP_PORT=3000
API_PORT=4000

# =============================================================================
# Database (Local Docker)
# =============================================================================
POSTGRES_USER=tcrn
POSTGRES_PASSWORD=dev_password_change_me
POSTGRES_DB=tcrn_tms
DATABASE_URL=postgresql://tcrn:dev_password_change_me@localhost:5432/tcrn_tms

# =============================================================================
# PII Database (Local Docker)
# =============================================================================
PII_POSTGRES_USER=pii_user
PII_POSTGRES_PASSWORD=dev_pii_password_change_me
PII_POSTGRES_DB=pii_vault
PII_DATABASE_URL=postgresql://pii_user:dev_pii_password_change_me@localhost:5433/pii_vault
PII_ENCRYPTION_KEY=dev_encryption_key_32_chars_min

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# MinIO
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=dev_minio_password
MINIO_ENDPOINT=localhost:9000

# =============================================================================
# NATS
# =============================================================================
NATS_URL=nats://localhost:4222

# =============================================================================
# JWT
# =============================================================================
JWT_SECRET=dev_jwt_secret_32_chars_minimum_ok
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=43200
PII_JWT_TTL=300

# =============================================================================
# Security
# =============================================================================
FINGERPRINT_SECRET_KEY=dev_fingerprint_secret_32_chars_m
FINGERPRINT_KEY_VERSION=v1

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# PII Service
# Note: Port 5100 is mapped to container's 5000 (macOS AirPlay uses 5000)
# =============================================================================
PII_SERVICE_URL=http://localhost:5100

# =============================================================================
# Tencent Cloud SES (Email Service)
# Leave empty for local dev, emails will be logged instead of sent
# =============================================================================
TENCENT_SES_SECRET_ID=
TENCENT_SES_SECRET_KEY=
TENCENT_SES_REGION=ap-hongkong
TENCENT_SES_FROM_ADDRESS=noreply@localhost
TENCENT_SES_FROM_NAME=TCRN TMS Dev
TENCENT_SES_REPLY_TO=
FRONTEND_URL=
